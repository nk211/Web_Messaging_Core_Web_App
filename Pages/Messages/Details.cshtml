@page
@model Web_Messaging_Core_Web_App.Pages.Messages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Message</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Sender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Sender.SenderName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Receiver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Receiver.ReceiverName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.MessagingType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.MessagingType.MethodName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.MessageBody)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.MessageBody)
        </dd>
    </dl>
</div>
