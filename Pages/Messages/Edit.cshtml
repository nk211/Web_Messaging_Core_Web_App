@page
@model Web_Messaging_Core_Web_App.Pages.Messages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Message.Id" />
            <div class="form-group">
                <label asp-for="Message.SenderId" class="control-label"></label>
                <select asp-for="Message.SenderId" class="form-control" asp-items="ViewBag.SenderId"></select>
                <span asp-validation-for="Message.SenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.ReceiverId" class="control-label"></label>
                <select asp-for="Message.ReceiverId" class="form-control" asp-items="ViewBag.ReceiverId"></select>
                <span asp-validation-for="Message.ReceiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.MessagingTypeId" class="control-label"></label>
                <select asp-for="Message.MessagingTypeId" class="form-control" asp-items="ViewBag.MessagingTypeId"></select>
                <span asp-validation-for="Message.MessagingTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.MessageBody" class="control-label"></label>
                <input asp-for="Message.MessageBody" class="form-control" />
                <span asp-validation-for="Message.MessageBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
